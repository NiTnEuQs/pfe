<idea-plugin>
    <id>fr.univlille1.carbonx</id>
    <name>Carbon X Linker</name>
    <version>1.0</version>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">PFE Students</vendor>

    <description><![CDATA[
      Link Android Studio with Carbon X application.<br>
      <!--em>most HTML tags may be used</em-->
    ]]></description>

    <change-notes><![CDATA[
      First version.<br>
      <!--em>most HTML tags may be used</em-->
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!--depends>com.intellij.modules.androidstudio</depends-->
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="carbonx">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="pfe.CarbonX" text="_CarbonX" description="CarbonX">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="CarbonX.Connect" class="carbonx.Connect" text="Connexion à Carbon X"
                    description="Etabli la connexion avec le serveur de Carbon X"/>
            <action id="CarbonX.SendScreenLayout" class="carbonx.SendScreenLayout" text="Envoyer l'image du layout"
                    description="Envoie l'image du layout généré par le plugin"/>
        </group>
    </actions>


</idea-plugin>